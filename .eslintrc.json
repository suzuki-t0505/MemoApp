{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-use-before-define": 0,
        "react/function-component-definition": [2, { "namedComponents": "arrow-function"}],
        "react/prop-types": ["error", { "ignore": ["navigation"]}]
    }
}
